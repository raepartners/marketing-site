---
import Logo from './Logo.astro';

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border bg-muted/30">
  <div class="max-w-4xl mx-auto px-6 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="flex items-center gap-3 text-foreground">
        <Logo class="h-8 w-auto" />
        <span class="text-sm text-muted-foreground">
          rae
        </span>
      </div>
      
      <div class="flex items-center gap-6 text-sm text-muted-foreground">
        <a href="/blog" class="hover:text-foreground transition-colors">Blog</a>
        <a href="mailto:hello@rae.partners" class="hover:text-foreground transition-colors">Contact</a>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-border text-center text-sm text-muted-foreground">
      <p>&copy; {currentYear} Responsible Autonomous Engineering Partners</p>
    </div>
  </div>
</footer>
